# Sakani API Configuration
# Copy this file to .env.local and configure as needed

# Sakani API Base URL
# Example: https://api.sakani.sa/api/v1
NEXT_PUBLIC_SAKANI_API_BASE_URL=https://api.sakani.sa/api/v1

# API Authentication (OPTIONAL - Leave empty for guest access)
# Option 1: API Key
# NEXT_PUBLIC_SAKANI_API_KEY=your_api_key_here

# Option 2: Bearer Token (if using OAuth/JWT)
# NEXT_PUBLIC_SAKANI_API_TOKEN=your_bearer_token_here

# Use mock data instead of real API
# Set to 'true' to force mock data, 'false' or leave empty to try real API
# Without credentials, the app will try guest access to public endpoints
NEXT_PUBLIC_USE_MOCK_DATA=false

